@model List<UserInfo>

<main class="text-center">
    <h1 class="h4">Meeting Participation List</h1>

    <table class="table table-bordered mt-3 rounded">
        <thead>
            <tr class="table-dark">
                <td>Name</td>
                <td>Participation Status</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @{int i = 0; }

            @foreach(var user in Model)
            {
                var status = user.WillAttend == true ? "Yes":"No";
                var className = user.WillAttend == true ? "":"table-danger";

                if(user.WillAttend == true)
                {
                    i++;
                }

                <tr class="@className">
                    <td>@user.Name</td>
                    <td>@status</td>
                    <td>
                        <a class="btn btn-sm btn-outline-primary" href="/meeting/details/@user.Id">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Number of Participants: @i</span>
        </div>
    </div>

</main>